@page
@model Hero.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="preconnect" href="https://rsms.me/" />
<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />

<style>
    body {
        background: radial-gradient(circle at top left, #0f0f0f, #1a1a1a 70%);
        font-family: 'Inter', sans-serif;
        min-height: 100vh;
        /* display: flex; */
        align-items: center;
        justify-content: center;
    }

    .register-card {
        max-width: 380px; /**/
        width: 100%;
        background: rgba(25, 25, 25, 0.9);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 0.75rem;
        backdrop-filter: blur(12px);
        box-shadow: 0 8px 24px rgba(16, 185, 129, 0.2);
        padding: 1.25rem;
        margin: auto;
    }

    .page-header {
        text-align: center;
        margin-bottom: 1rem;
    }

        .page-header h2 {
            font-weight: 700;
            font-size: 1.5rem;
            color: #fff;
        }

        .page-header p {
            color: #aaa;
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

    .form-label {
        color: #e5e5e5;
        font-weight: 500;
        margin-bottom: 0.25rem;
    }

    .form-control {
        background-color: #1f1f1f;
        border: 1px solid #333;
        color: #fff; /* الكتابة واضحة */
        border-radius: 0.5rem;
        transition: all 0.3s ease;
        font-size: 0.9rem;
    }

        .form-control:focus {
            border-color: #10b981;
            box-shadow: 0 0 0 0.2rem rgba(16, 185, 129, 0.25);
            background-color: #1f1f1f;
            color: #fff;
        }

    .btn-primary {
        background: transparent;
        border: 2px solid #10b981;
        color: #10b981;
        font-weight: 600;
        border-radius: 0.6rem;
        transition: all 0.3s ease;
        font-size: 0.95rem;
        padding: 0.6rem;
    }

        .btn-primary:hover {
            background: #10b981;
            color: #fff;
            box-shadow: 0 0 12px rgba(16, 185, 129, 0.6);
        }
</style>

<div class="register-card">
    <div class="page-header">
        <h2>Create your Account</h2>
        <p>Start tracking your company’s carbon footprint</p>
    </div>

    @if (Model.ModelState.ErrorCount > 0)
    {
        <div class="alert alert-danger shadow-sm">
            Please fix the errors below.
        </div>
    }

    <form method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Email</label>
            <input asp-for="Input.Email" class="form-control" required />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Password" class="form-label">Password</label>
            <input asp-for="Input.Password" class="form-control" type="password" required />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" required />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.CompanyName" class="form-label">Company Name</label>
            <input asp-for="Input.CompanyName" class="form-control" required />
            <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Industry" class="form-label">Industry</label>
            <input asp-for="Input.Industry" class="form-control" required />
            <span asp-validation-for="Input.Industry" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Register Account</button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    (() => {
        'use strict'
        const forms = document.querySelectorAll('.needs-validation')
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })
    })()
</script>
