<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hero</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        body {
            background-color: #000;
            color: #fff;
        }

        /* NAVBAR */
        nav {
            height: 49px;
            z-index: 50;
            background: rgba(0,0,0,0.8);
            backdrop-filter: blur(8px);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 16px;
            border-bottom: 1px solid white;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
        }

            nav .logo {
                color: #fff !important;
                font-weight: 700;
            }

        .logo-badge {
            display: inline-block;
            margin-left: 8px;
            padding: 2px 6px;
            font-size: 0.7rem;
            font-weight: 600;
            color: #970000;
            /* background-color: #8c0000 */
            /* border-radius: 4px; */
            letter-spacing: 0.5px;
        }


            nav .nav-links {
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
                display: flex;
                gap: 20px;
            }

                nav .nav-links a {
                    color: #fff !important;
                    text-decoration: none;
                    transition: color 0.3s ease;
                }

                    nav .nav-links a:hover {
                        color: #10b981 !important; /* Green accent */
                    }

            /* Auth buttons */
            nav .auth-buttons a,
            nav .auth-buttons button {
                padding: 2px 12px;
                border: 1px solid white;
                border-radius: 0px;
                margin-left: 10px;
                color: #fff !important;
            }

                nav .auth-buttons a:hover,
                nav .auth-buttons button:hover {
                    border-color: #10b981;
                    color: #10b981 !important;
                }

        /* SIDEBAR */
        #sidebar {
            position: fixed;
            top: 64px;
            left: 0;
            width: 64px;
            background: rgba(0,0,0,0.45);
            backdrop-filter: blur(8px);
            border-radius: 0 14px 14px 0;
            padding: 10px 0;
            height: auto;
            overflow: visible;
            transition: width .2s;
            z-index: 40;
        }

            #sidebar:hover {
                width: 220px;
            }

        .side-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 10px 15px;
            color: white;
            cursor: pointer;
            text-decoration: none;
        }

            .side-item:hover {
                color: #ef4444;
            }

        .fa-outline {
            color: transparent;
            -webkit-text-stroke: 1px white;
            transition: color .2s ease, -webkit-text-stroke-width .2s ease;
        }

        .side-item:hover .fa-outline {
            color: #ef4444 !important;
            -webkit-text-stroke: 0;
        }

        .side-label {
            opacity: 0;
            transform: translateX(-10px);
            transition: opacity .25s ease, transform .25s ease;
            white-space: nowrap;
        }

        #sidebar:hover .side-label {
            opacity: 1;
            transform: translateX(0);
        }

        /* MAIN CONTENT */
        main {
            margin-left: 64px;
            margin-top: 64px;
            padding: 25px;
            min-height: calc(100vh - 64px - 40px); /* navbar + footer height */
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* FOOTER */
        footer {
            padding: 7px;
            text-align: center;
            border-top: 1px solid white;
            color: #aaa;
        }

        /* MOBILE */
        @@media (max-width: 1024px) {
            #sidebar {
                transform: translateX(-100%);
                width: 220px;
            }

                #sidebar.open {
                    transform: translateX(0);
                }

            main, footer {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-custom fixed-top d-flex justify-content-between px-3">
        <div class="logo fw-bold">
            Hero <span class="logo-badge">Beta</span>
        </div>


        <div class="nav-links d-none d-lg-flex position-absolute start-50 translate-middle-x">
            <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
            <a class="nav-link" href="@Url.Action("About", "Home")">About Us</a>
            <a class="nav-link" href="@Url.Action("Privacy", "Home")">Privacy Policy</a>
        </div>

        <div class="auth-buttons d-none d-lg-flex">
            @if (User.Identity.IsAuthenticated)
            {
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="d-inline">
                    <button type="submit" class="btn btn-outline-light">Logout</button>
                </form>
            }
            else
            {
                <a class="btn btn-outline-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
                <a class="btn btn-outline-light ms-2" asp-area="Identity" asp-page="/Account/Register">Register</a>
            }
        </div>
        <button id="toggleBtn" class="d-lg-none btn btn-link text-white">
            <i class="fas fa-bars"></i>
        </button>
    </nav>

    <!-- SIDEBAR -->
    <aside id="sidebar">
        <a asp-controller="Corporate" asp-action="Submit" class="side-item">
            <i class="fa-solid fa-pen-to-square fa-outline text-xl"></i>
            <span class="side-label">Submit</span>
        </a>

        <a asp-controller="Corporate" asp-action="Dashboard" class="side-item">
            <i class="fa-solid fa-chart-line fa-outline text-xl"></i>
            <span class="side-label">Dashboard</span>
        </a>

        <a asp-controller="Corporate" asp-action="API" class="side-item">
            <i class="fa-solid fa-code fa-outline text-xl"></i>
            <span class="side-label">API</span>
        </a>
    </aside>

    <!-- MAIN CONTENT -->
    <main>
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </main>

    <footer>
        © 2025 Hero 0.9.3 (Beta) | Built with care 
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const sidebar = document.getElementById("sidebar");
        const toggleBtn = document.getElementById("toggleBtn");
        toggleBtn.addEventListener("click",()=>sidebar.classList.toggle("open"));
    </script>

</body>
</html>
